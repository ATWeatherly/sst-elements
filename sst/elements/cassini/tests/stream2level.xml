<?xml version="1.0"?>
<sdl version="2.0"/>
<timebase>1ns</timebase>
<!-- <config> </config> -->

<variables>
	<lat> 1ns </lat>
	<halflat> 500ps </halflat>
	<buslat> 10ns </buslat>
</variables>


<sst>
	<component name="cpu" type="memHierarchy.streamCPU">
		<params>
			<workPerCycle> 1000 </workPerCycle>
			<commFreq> 100 </commFreq>
			<memSize> 0x1000 </memSize>
			<do_write> 1 </do_write>
            <num_loadstore> 100000 </num_loadstore>
		</params>
		<link name=cpu_l1cache_link port=mem_link latency=$halflat />
	</component>

        <component name="l1pref" type="cassini.NextBlockPrefetcher">
                <link name=cpu_l1cache_link port=cpuLink latency=$halflat />
                <link name=pref_cpu_l1cache_link port=cacheCPULink latency=$halflat />
                <link name=pref_l1cache_bus_link port=cacheMemoryLink latency=$halflat />
                <link name=l1cache_bus_link port=memoryLink latency=$halflat />

                <params>
                        <pending>16</pending>
                </params>
        </component>

	<component name="l1cache" type="memHierarchy.Cache">
		<params>
			<num_ways> 4 </num_ways>
			<num_rows> 16 </num_rows>
			<blocksize> 32 </blocksize>
			<access_time> 2 ns </access_time>
			<num_upstream> 1 </num_upstream>
			<next_level> l2cache </next_level>
		</params>
		<link name=pref_cpu_l1cache_link port=upstream0 latency=$halflat />
		<link name=pref_l1cache_bus_link port=snoop_link latency=$buslat />
	</component>

	<component name="l2cache" type="memHierarchy.Cache">
		<params>
			<num_ways> 8 </num_ways>
			<num_rows> 64 </num_rows>
			<blocksize> 32 </blocksize>
			<access_time> 10 ns </access_time>
		</params>
		<link name=l2cache_bus_link port=snoop_link latency=$buslat />
	</component>


	<component name="membus" type="memHierarchy.Bus">
		<params>
			<numPorts> 3 </numPorts>
			<busDelay> 20 ns </busDelay>
		</params>
		<link name=l1cache_bus_link port=port0 latency=$buslat />
		<link name=l2cache_bus_link port=port1 latency=$buslat />
		<link name=mem_bus_link port=port2 latency=$buslat />
	</component>

	<component name="memory" type="memHierarchy.MemController">
		<params>
			<access_time> 1000 ns </access_time>
			<mem_size> 512 </mem_size>
			<clock> 1GHz </clock>
		</params>
		<link name=mem_bus_link port=snoop_link latency=$buslat />
	</component>


</sst>

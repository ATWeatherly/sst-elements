<?xml version="1.0"?>

<config>
 stopAtCycle=1ms
</config>

<!-- reference definition for introspector 1-->
<intro_params>
    <period>50ns</period>
    <model>cpu_data.cpu_data</model>
</intro_params>

<sst>
  <introspector id="CountIntrospector">	
		<introspector_cpu>
            <params>
                <params reference=intro_params />
            </params>
		</introspector_cpu>
  </introspector>
  <introspector id="TemperatureIntrospector">	
		<introspector_cpuTemperature>
            <params>
                <params reference=intro_params />
            </params>
		</introspector_cpuTemperature>
  </introspector>


  <component id="c0">
    <cpu_data.cpu_data>
      <params>
	<workPerCycle>1000</workPerCycle>
	<commFreq>100000</commFreq>
	<commSize>100</commSize>
	<push_introspector>CountIntrospector</push_introspector>
      </params>
      <links>
	<link id="a">
	  <params>
	    <name>Nlink</name>
	    <lat>10 ns</lat>
	  </params>
	</link>

	<link id="b">
	  <params>
	    <name>Slink</name>
	    <lat>10 ns</lat>
	  </params>
	</link>

	<link id="c">
	  <params>
	    <name>Elink</name>
	    <lat>10 ns</lat>
	  </params>
	</link>

	<link id="d">
	  <params>
	    <name>Wlink</name>
	    <lat>10 ns</lat>
	  </params>
	</link>
      </links>
    </cpu_data.cpu_data>
  </component>

  <component id="c1">
    <cpu_data.cpu_data>
      <params>
	<workPerCycle>1000</workPerCycle>
	<commFreq>100000</commFreq>
	<commSize>100</commSize>
	<push_introspector>TemperatureIntrospector</push_introspector>
      </params>
      <links>
	<link id="a">
	  <params>
	    <name>Nlink</name>
	    <lat>10 ns</lat>
	  </params>
	</link>

	<link id="b">
	  <params>
	    <name>Slink</name>
	    <lat>10 ns</lat>
	  </params>
	</link>

	<link id="c">
	  <params>
	    <name>Elink</name>
	    <lat>10 ns</lat>
	  </params>
	</link>

	<link id="d">
	  <params>
	    <name>Wlink</name>
	    <lat>10 ns</lat>
	  </params>
	</link>
      </links>
    </cpu_data.cpu_data>
  </component>


</sst>

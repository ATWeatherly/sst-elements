<?xml version="1.0"?>

<sdl version="2.0"/>

<config>
 stopAtCycle=1ms
</config>


<param_include>
    <intro_params>
        <period>50ns</period>
        <model>cpu_data.cpu_data</model>
    </intro_params>
</param_include>
    
<sst>
    <introspector name="CountIntrospector" type="introspector_cpu">
        <params include=intro_params>
	    <id>0</id>
	</params>
    </introspector>

    <introspector name="TemperatureIntrospector" type="introspector_cpuTemperature">
        <params include=intro_params>
	    <id>1</id>
	</params>
    </introspector>

    <component name="c0" type="cpu_data.cpu_data">
        <params>
            <workPerCycle>1000</workPerCycle>
	    <commFreq>100000</commFreq>
	    <commSize>100</commSize>
	    <push_introspector>CountIntrospector</push_introspector>
        </params>
        <link name="a" port="Nlink" latency="10ns"/>
        <link name="b" port="Slink" latency="10ns"/>
        <link name="c" port="Elink" latency="10ns"/>
        <link name="d" port="Wlink" latency="10ns"/>
    </component>

    <component name="c1" type="cpu_data.cpu_data">
        <params>
            <workPerCycle>1000</workPerCycle>
	    <commFreq>100000</commFreq>
	    <commSize>100</commSize>
	    <push_introspector>CountIntrospector</push_introspector>
        </params>
        <link name="a" port="Nlink" latency="10ns"/>
        <link name="b" port="Slink" latency="10ns"/>
        <link name="c" port="Elink" latency="10ns"/>
        <link name="d" port="Wlink" latency="10ns"/>
    </component>

</sst>

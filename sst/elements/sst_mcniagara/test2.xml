<?xml version="1.0"?>
<sdl version="2.0" />
<config>
	run-mode=both
	partitioner=self
</config>

<sst>
	<component name="McNiagara" type="sst_mcniagara.SSTMcNiagara">
		<params>
			<Debug><!-- set the debug level (default: 0) -->
				0
			</Debug>
			<seed><!-- set random number seed -->
				100
			</seed>
			<cycles><!-- set number of cycles to simulate (default: 100K?) -->
				100000
			</cycles>
			<converge><!-- run until CPI converges -->
				0
			</converge>
			<appDirectory><!-- what directory to look for files in -->
				mcniagara/
			</appDirectory>
			<inputHistogram><!--  -->
				INPUT
			</inputHistogram>
			<instructionProbabilityFile><!-- use 'name' as insn mix input file -->
				inst_prob.h
			</instructionProbabilityFile>
			<traceFile><!-- use 'name' as input instruction trace file -->
			sample_trace.txt
			</traceFile>
			<performanceCounterFile><!-- use 'name' as an i-mix-only file (new format) -->
				perf_cnt.h
			</performanceCounterFile>
			<outputFile><!-- use 'name' as instruction size distribution file (instrSizeDistr.txt) -->
			</outputFile>
			<!-- instructionsizefile and fetchsizefile are exclusive options; only one of them should be used -->
		</params>
	</component>
</sst>

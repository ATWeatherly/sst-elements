<?xml version="1.0"?>

<sdl version="2.0"/>

<config>
    stopAtCycle=1000000000s
</config>

<variables>
    <lat> 1ns </lat>
</variables>

<param_include>
  <M5Params>
    <M5debug> none </M5debug>
  </M5Params>
</param_include>

<!-- 
    <M5debug> All SyscallVerbose </M5debug>
    <M5debug> none</M5debug>
    <M5debug> Tport DLL MemoryAccess Bus MemLink MemLinkPort Cache CachePort CacheRepl HWPrefetchk</M5debug>
-->

<sst>
    <component name=system type=m5C.M5 rank=0 >
        <params include=M5Params>
            <configFile>core0-M5.xml</configFile>
            <debug> 0 </debug>
            <info>yes</info>
            <registerExit>yes</registerExit>
        </params>
        <link name=core0-L2-MemBus port=core0-L2-MemBus latency=$lat />    
    </component>

    <component name=system type=m5C.M5 rank=1 >
        <params include=M5Params>
            <configFile>core1-M5.xml</configFile>
            <debug> 0 </debug>
            <info>yes</info>
            <registerExit>no</registerExit>
        </params>
        <link name=core1-L2-MemBus port=core1-L2-MemBus latency=$lat />    
    </component>

    <component name=system type=m5C.M5 rank=2 >
        <params include=M5Params>
            <configFile>core2-M5.xml</configFile>
            <debug> 0 </debug>
            <info>yes</info>
            <registerExit>no</registerExit>
        </params>
        <link name=core2-L2-MemBus port=core2-L2-MemBus latency=$lat />    
    </component>

    <component name=system type=m5C.M5 rank=3 >
        <params include=M5Params>
            <configFile>mem-M5.xml</configFile>
            <debug> 0 </debug>
            <info>yes</info>
            <registerExit>no</registerExit>
        </params>
        <link name=core0-L2-MemBus port=core0-L2-MemBus latency=$lat />    
        <link name=core1-L2-MemBus port=core1-L2-MemBus latency=$lat />    
        <link name=core2-L2-MemBus port=core2-L2-MemBus latency=$lat />    
    </component>
</sst>

<!-- This is a simple sdl file for zesto, 
one zesto core is connected to one simple 
cache, which is further connected to simple mc directly-->

<?xml version="1.0"?>

<sdl version="2.0"/>

<config>
  stopAtCycle=0.5ms
  partitioner=self
  run-mode=both
</config>

<param_include>
  <cache_params>
    <size>524288</size>
    <assoc>4</assoc>
    <block_size>32</block_size>
    <hit_time>2</hit_time>
    <lookup_time>5</lookup_time>
    <mc_node_ids>1</mc_node_ids>
  </cache_params>

  <mc_params>
    <latency>50</latency>
  </mc_params>     
</param_include>

<sst>

  <component name="zesto_qsimclient_0" type="zesto.qsimclient_core_t" rank=0>
      <params>
        <nodeId>0</nodeId>
        <clockFreq>1 GHz</clockFreq>
        <configFile>core_config/6.cfg</configFile>
        <server>localhost</server>
		<port>18998</port>
      </params>
      <link name="proc_cache_0" port="cache_link" latency="1 ns"/>
  </component>

  <component name="cache_0" type="zesto.simpleCache" rank=1>
      <params include=cache_params>
        <nodeId>0</nodeId>
        <clockFreq>1 GHz</clockFreq> 
      </params>
      <link name="proc_cache_0" port="link_upper" latency="1 ns"/>
      <link name="mc_cache" port="link_lower" latency="1 ns"/>
  </component>

  <component name="mc" type="zesto.simpleMC" rank=2>
    <params include=mc_params>
      <nodeId>1</nodeId>
      <clockFreq>300 MHz</clockFreq>
    </params>
    <link name="mc_cache" port="link_ni" latency="1 ns"/>
  </component>

</sst>

<?xml version="1.0"?>

<config>
    stopAtCycle=1000000000s
</config>

<linkParams>
    <lat>1ns</lat>
</linkParams>


<sst>
    <component id="cpu" >
        <m5C.M5>
            <params>
                <configFile>xml/np2-cpu.xml</configFile>
                <debug>0</debug>
                <M5debug>no</M5debug>
                <info>yes</info>
                <registerExit>yes</registerExit>
            </params>
            <links>
                <link id="mem2bus">
                    <params include=linkParams>
                        <name>mem2bus</name>
                    </params>
                </link>
            </links>
        </m5C.M5>
    </component>

    <component id="mem" >
        <m5C.M5>
            <params>
                <configFile>xml/np2-dram.xml</configFile>
                <debug>0</debug>
                <M5debug>no</M5debug>
                <info>yes</info>
            </params>
            <links>
                <link id="mem2bus">
                    <params include=linkParams>
                        <name>mem2bus</name>
                    </params>
                </link>
            </links>
        </m5C.M5>
    </component>

</sst>

<?xml version="1.0"?>

<sdl version="2.0"/>

<variables>
    <lat> 10ns </lat>
</variables>


<param_include>

<busParams>
    <clock> 1.6Ghz </clock>
    <responder_set> false </responder_set>
    <block_size> 64 </block_size>
    <bus_id> 0 </bus_id>
    <header_cycles> 1 </header_cycles>
    <width> 64 </width>
</busParams>

</param_include>

<sst>

    <component name=nid0.membus type=+Bus >
        <params include=busParams>
            <link.0.name> core0-L2-MemBus </link.0.name>
            <link.0.portName> mem_side </link.0.portName>
            <link.0.portIndex> 0 </link.0.portIndex>
            <link.0.snoopOut> true </link.0.snoopOut>
            <link.0.snoopIn> false </link.0.snoopIn>

            <link.1.name> core1-L2-MemBus </link.1.name>
            <link.1.portName> mem_side </link.1.portName>
            <link.1.portIndex> 1 </link.1.portIndex>
            <link.1.snoopOut> true </link.1.snoopOut>
            <link.1.snoopIn> false </link.1.snoopIn>

            <link.2.name> core2-L2-MemBus </link.2.name>
            <link.2.portName> mem_side </link.2.portName>
            <link.2.portIndex> 2 </link.2.portIndex>
            <link.2.snoopOut> true </link.2.snoopOut>
            <link.2.snoopIn> false </link.2.snoopIn>
        </params>
        <link name=nid0.MemBus-Memory port=port latency=$lat />
   </component>

    <component name=nid0.physmem type=+PhysicalMemory >
        <params>
            <range.start> 0x00000000 </range.start>
            <range.end>   0x08ffffff </range.end>
            <latency> 30ns </latency>
            <latency_var> 30ns </latency_var>
            <null> false </null>
            <zero> false </zero>
            <exe0.process.egid> 100 </exe0.process.egid>
            <exe0.process.gid> 100 </exe0.process.gid>
            <exe0.process.euid> 100 </exe0.process.euid>
            <exe0.process.uid> 100 </exe0.process.uid>
            <exe0.process.executable> ${M5_EXE} </exe0.process.executable>
            <exe0.process.cmd.0> ${M5_EXE}  </exe0.process.cmd.0>
            <exe0.physicalMemory.start> 0x00000000 </exe0.physicalMemory.start>
            <exe0.physicalMemory.end>   0x0fffffff </exe0.physicalMemory.end>

        </params>
        <link name=nid0.MemBus-Memory port=port latency=$lat />
    </component>

</sst>
